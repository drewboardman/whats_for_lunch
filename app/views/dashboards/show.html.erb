<div class="container">
<section id="intro" class="section intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>SpringBot Lunch App</h1>
                <p>This is a sample app created by Drew Boardman</p>
            </div>
            <div class="panel">
                Recommended restaurant:
                <% if current_user.recommended_restaurant %>
                  <%= link_to current_user.recommended_restaurant.name, current_user.recommended_restaurant %>
                <% end %>
            </div>
        </div>
    </div>
</section>

<section id="list" class="section list-section">
    <%= render 'restaurants/restaurants_list' %>
</section>
<section id="add" class="section add-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
            <h4>Add a Restaurant</h4>
                <%= render 'restaurants/add' %>
            </div>
        </div>
    </div>
</section>
</div>
