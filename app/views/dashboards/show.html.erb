<div class="container">
<section id="intro" class="section intro-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>SpringBot Lunch App</h1>
                <p>This is a sample app created by Drew Boardman</p>
                <p>You last visited restaurant with id: 
                <%= @rest_id %>
                and name:
                <%= @rest_name %>
                </p>
                <a class="btn btn-default page-scroll" href="#restaurants">View Restaurants List</a>
            </div>
        </div>
    </div>
</section>

<section id="list" class="section list-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered">
				<thead>
			        <tr>
			            <th>Restaurant</th>
			            <th>Address</th>
			            <th>Last Visited</th>
			            <th>Your Score</th>
			            <th>Average User Score</th>
			            <th>Change Score</th>
			            <th>Edit Last Visit</th>
			        </tr>
			    </thead>
					<%= render @restaurants %>
				</table>
            </div>
        </div>
    </div>
</section>
<section id="add" class="section add-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
			<h4>Add a Restaurant</h4>
				<%= render 'restaurants/add' %>
			</div>
		</div>
	</div>
</section>
</div>
